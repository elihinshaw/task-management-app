<h1>All tasks</h1>
<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p>Description: <%= task.description %></p>
  <p>Priority: <%= task.priority %></p>
  <p>Due_date: <%= task.due_date %></p>
  <p>Status: <%= task.status %></p>
  <p>Progress: <%= task.progress %></p>
<% end %>

<%= link_to "More Info", task %>
<%= link_to "New task", new_task_path %>
