<h1>Task info</h1>
  <h2><%= task.name %></h2>
  <p>Description: <%= task.description %></p>
  <p>Priority: <%= task.priority %></p>
  <p>Due_date: <%= task.due_date %></p>
  <p>Status: <%= task.status %></p>
  <p>Progress: <%= task.progress %></p>
<a href="/tasks">Back to all tasks</a>

<%= link_to "Edit task", edit_task_path(@task) %>
<%= link_to "Destroy task", task_path(@task), data: {turbo_method: :delete} %>